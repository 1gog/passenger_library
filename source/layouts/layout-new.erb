<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><% if current_page.data.title %><%= current_page.data.title %> - <%end %><%= SITE_TITLE %></title>
    <%= stylesheet_link_tag "all" %>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400|Open+Sans:400,600" rel="stylesheet" type="text/css">
    <% if current_page.data.skip_search %>
      <!-- META: SKIP SEARCH -->
    <% end %>
  </head>

  <body class="<%= page_classes %> <%= 'automenu' if !content_for?(:sidebar) %>">
    <!-- Main navigation
    =========================================== -->
    <header class="navbar navbar-static-top bs-docs-nav" id="top">
      <div class="container">
        <div class="navbar-header" role="banner">
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span> Navigation
          </button>
          <a class="navbar-brand" href="<%= url_for '/index.html' %>">
            <span class="navbar-brand-part1">Passenger</span>
            <span class="navbar-brand-part2">Library</span>
          </a>
        </div>
        <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
          <ul class="nav navbar-nav">
            <% navbar_dropdown_section :walkthroughs, :start, :basics, :deploy_walkthrough do %>
              <a href="<%= url_for '/walkthroughs/' %>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Walkthroughs <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% navbar_section :start do %><%= link_to "Quickstart", "/walkthroughs/start/index.html" %><% end %>
                <% navbar_section :basics do %><%= link_to "Basics", "/walkthroughs/basics/index.html" %><% end %>
                <% navbar_section :deploy_walkthrough do %><%= link_to "Deploy to production", "/walkthroughs/deploy/index.html" %><% end %>
              </ul>
            <% end %>
            <% navbar_dropdown_section :guides, :general, :deploy, :admin do %>
              <a href="<%= url_for '/allguides.html' %>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Guides <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% navbar_section :general do %><%= link_to "General guides", "/guides/index.html" %><% end %>
                <% navbar_section :deploy do %><%= link_to "Deployment &amp; scaling", "/deploy/index.html" %><% end %>
                <% navbar_section :admin do %><%= link_to "Administration", "/admin/index.html" %><% end %>
                <% navbar_section :misc do %><%= link_to "Miscellaneous", "/misc/index.html" %><% end %>
              </ul>
            <% end %>
            <% navbar_section :reference do %><%= link_to "Reference", "/reference/index.html" %><% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="https://www.phusionpassenger.com/support" target="_blank">Support</a></li>
            <li><a href="http://www.phusion.nl/contact" target="_blank">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>


    <%= yield_content :masthead %>


    <div class="container bs-docs-container">
      <div class="row">
        <% if has_sidebar? %>
          <!-- Sidebar
          =========================================== -->
          <div class="col-md-3" role="complementary">
            <div class="bs-docs-sidebar hidden-print">
              <%= yield_sidebar_content %>
            </div>
          </div>

          <!-- Content
          =========================================== -->
          <div class="col-md-8" role="main">
            <%= '<section class="bs-docs-section">' if !current_page.data.multisection %>
              <%= yield %>
            <%= '</section>' if !current_page.data.multisection %>
          </div>
        <% else %>
          <!-- Content
          =========================================== -->
          <div class="col-md-8 col-md-offset-2" role="main">
            <%= '<section class="bs-docs-section">' if !current_page.data.multisection %>
              <%= yield %>
            <%= '</section>' if !current_page.data.multisection %>
          </div>
        <% end %>
      </div>

      <% if current_page.data.comments != false %>
        <div class="row" role="complementary">
          <div class="<%= comments_section_classes %> bs-comments-section">
            <div class="bs-comments-section-alert" role="alert">
              <h3 class="notoc">Thank you for reading. Have any tips for us? :-)</h3>
              <p>Please feel free to contribute by <a href="<%=h current_page_github_url %>">editing this page</a> or by posting tips, notes and feedback below.</p>
            </div>

            <div id="disqus_thread"></div>
            <script>
              /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
              var disqus_shortname = 'passengerdocs'; // required: replace example with your forum shortname

              /* * * DON'T EDIT BELOW THIS LINE * * */
              (function() {
                  var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                  dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
              })();
            </script>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
          </div>
        </div>
      <% end %>
    </div>


    <!-- Footer
    =========================================== -->
    <footer class="bs-docs-footer" role="contentinfo">
      <div class="container">
        <div class="bs-docs-social">
          <ul class="bs-docs-social-buttons">
            <li>
              <iframe class="github-btn" src="http://ghbtns.com/github-btn.html?user=phusion&amp;repo=passenger&amp;type=watch&amp;count=true" width="90" height="20" title="Star on GitHub"></iframe>
            </li>
            <li>
              <iframe class="github-btn" src="http://ghbtns.com/github-btn.html?user=phusion&amp;repo=passenger&amp;type=fork&amp;count=true" width="90" height="20" title="Fork on GitHub"></iframe>
            </li>
            <li>
              <a href="https://twitter.com/share" class="twitter-share-button" data-url="https://www.phusionpassenger.com" data-count="horizontal" data-via="phusion_nl" data-text="Phusion Passenger">Tweet</a>
            </li>
            <li>
              <a href="https://twitter.com/phusion_nl" class="twitter-follow-button" data-show-count="true">Follow @phusion_nl</a>
            </li>
          </ul>
        </div>

        <p>
          Documentation licensed under <a href="http://creativecommons.org/licenses/by-sa/4.0/">CC BY SA 4.0</a>.
        </p>
        <p>
          Phusion Passenger&reg; is a registered trademark of Hongli Lai and Ninh Bui.
        </p>

        <!-- Based on http://mistic100.github.io/jekyll-bootstrap-doc/ -->
        <!-- <ul class="bs-docs-footer-links muted">
          <li>&middot;</li>
          <li><a href="{{l.url}}">{{l.title}}</a></li>
        </ul> -->
      </div>
    </footer>

    <%= javascript_include_tag "all", :async => true %>
  </body>
</html>
